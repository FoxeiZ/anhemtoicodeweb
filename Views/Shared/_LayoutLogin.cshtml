<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Styles", false)
</head>
<body class="m-0" style="height: 100vh;">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-header">
        <div class="container">
            <a href="@Url.Action("Index", "Home")">
                <div class="logo">
                    <img src="~/Image/puoy.jpg" class="size-img" />
                </div>
            </a>
            <a href="@Url.Action("Login", "Home")">
                <div>
                    <img src="~/Image/profile.png" class="profile-img" />
                </div>
            </a>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
