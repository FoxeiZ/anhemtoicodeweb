@model IEnumerable<anhemtoicodeweb.Models.Product>

@{
    ViewBag.Title = "Home Page";
}

@section Styles {
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="@Url.Content("~/Content/css/Index.css")" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.css" integrity="sha512-yHknP1/AwR+yx26cB1y0cjvQUMvEa2PFzt1c9LlS4pRQ5NOTZFWbhBig+X9G9eYW/8m0/4OXNx8pxJ6z57x0dw==" crossorigin="anonymous" />
}

@section Javascript {
    <script type="text/javascript" src="@Url.Content("~/Scripts/IndexScript.js")" defer></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js" integrity="sha512-XtmMtDEcNz2j7ekrtHvOVR4iwwaD6o/FUJe6+Zq+HgcCsk3kj4uSQQR8weQ2QVj1o0Pk6PwYLohm206ZzNfubg==" crossorigin="anonymous"></script>
}

<main style="height:auto;">
    <link href="~/Content/css/Index.css" rel="stylesheet" />
    <div class="p-2 position-relative" id="slide1">
        <button class="slick-prev slick-arrow">&#10094;</button>
        <button class="slick-next slick-arrow">&#10095;</button>
        <div class="slide-container">
            <img class="image_banner" src="~/Image/banner1.png">
            <img class="image_banner" src="~/Image/banner2.jpg">
            <img class="image_banner" src="~/Image/banner3.png">
        </div>
    </div>
    <section>
        <h2>Danh mục</h2>
        <div class="container-wrap category">
            <div class="category-box">
                <img src="~/Image/logoforcategory/anecologo.jpg" />
                <h3>AnEco</h3>
            </div>
            <div class="category-box">
                <img src="~/Image/logoforcategory/NaturallyClean.jpg" />
                <h3>Naturally Clean</h3>
            </div>
            <div class="category-box">
                <img src="~/Image/logoforcategory/TreShop.jpg" />
                <h3>Tre Shop</h3>
            </div>
            <div class="category-box">
                <img src="~/Image/logoforcategory/CleverChanges.jpg" />
                <h3>Clever Changes</h3>
            </div>
            <div class="category-box">
                <img src="~/Image/logoforcategory/SapChangSen.png" />
                <h3>Sạp Chàng Sen</h3>
            </div>
            <div class="category-box">
                <img src="~/Image/logoforcategory/ECOLIFE-LOGO.png" />
                <h3>ECOLIFE</h3>
            </div>
            <div class="category-box">
                <img src="~/Image/logoforcategory/TheBamboo.png" />
                <h3>The Bamboo</h3>
            </div>
        </div>
    </section>
    <section>
        @* products *@
        <h2>Các sản phẩm bán chạy</h2>

        <div class="container-wrap product">

            @foreach (var product in Model.Take(10))
            {
                <div class="product-box">
                    <div class="product-image">
                        <img src="@Url.Content(product.ImagePro)" />
                    </div>
                    <div class="product-content">
                        <div class="main-content">
                            <div class="product-price">@(product.Price)đ</div>
                            <a href="@Url.Action("Details", "Products", new { id = product.ProductID })" style="text-decoration: none"><div class="product-name">@product.NamePro</div></a>
                        </div>
                        <div class="d-flex gap-4">
                            <div class="no-select BuyNowBtn">Buy Now</div>
                            <img src="~/Image/svg/cart.svg" alt="cart button">
                        </div>
                    </div>
                </div>
            }
        </div>
        <a href="@Url.Action("Index")">
            <div class="moreButton">Xem thêm</div>
        </a>
    </section>
    @*banner*@
    <div class="p-2 position-relative" id="slide2">
        <button class="slick-prev slick-arrow">&#10094;</button>
        <button class="slick-next slick-arrow">&#10095;</button>
        <div class="slide-container">
            <img class="image_banner" src="~/Image/banner1.png">
            <img class="image_banner" src="~/Image/banner2.jpg">
            <img class="image_banner" src="~/Image/banner3.png">
        </div>
    </div>
    <section>
        @* products *@
        <h2>Các sản phẩm khác</h2>
        <div class="container-wrap product">

            @foreach (var product in Model.Skip(10).Take(10))
            {
                <div class="product-box">
                    <div class="product-image">
                        <img src="@Url.Content(product.ImagePro)" />
                    </div>
                    <div class="product-content">
                        <div class="main-content">
                            <div class="product-price">@(product.Price)đ</div>
                            <a href="@Url.Action("Details", "Products", product.ProductID)" style="text-decoration: none"><div class="product-name">@product.NamePro</div></a>
                        </div>
                        <div class="d-flex gap-4">
                            <div class="no-select BuyNowBtn">Buy Now</div>
                            <img src="~/Image/svg/cart.svg" alt="cart button">
                        </div>
                    </div>
                </div>
            }
        </div>
        <a href="@Url.Action("Index")">
            <div class="moreButton">Xem thêm</div>
        </a>
    </section>
</main>