@model anhemtoicodeweb.Models.Cart

@{
    ViewBag.Title = "ShowCart";
    string placeholder_addr = TempData["Address"] != null ? "Bỏ trống nếu muốn dùng địa chỉ cũ" : "Địa chỉ giao hàng";
}

@section Styles {
    <style>
        .item-container {
            display: flex;
            height: 100%;
            max-height: 320px;
            overflow: hidden;
            background: white;
            padding: 12px;
            margin: 10px 0px 20px 0px;
            border-radius: 10px;
            flex-direction: column;
        }

        .flex-container {
            display: flex;
            align-items: center;
        }

        .image-wrapper {
            height: 100%;
            width: 15%;
        }

        .quantity-input {
            width: 64px;
            border-radius: 6px;
            border: #5b5b5b solid 1px;
        }

        .text h3 {
            font-size: 12px;
        }

        .empty-cart {
            border-radius: 10px;
            margin: 20px 0px;
            width: 100%;
            background-color: white;
            height: 10vh;
            line-height: 10vh;
            text-align: center;
            font-size: x-large;
        }

        .preview-img {
            aspect-ratio: 1;
            width: 60px;
            position: relative;
            transform: translateX(30%);
        }

        table {
            margin: 20px 0;
        }

        .close {
            position: absolute;
            font-size: 25px;
            top: 0;
            left: 0;
            cursor: pointer;
            transform: rotate(45deg);
            color:red;
        }
        
        
    </style>
}

<h2>Giỏ hàng của bạn</h2>
<a href="@Url.Action("Index", "Products")">&#8592 Tiếp tục mua hàng</a>
@if (Model != null && Model.Items.Count() > 0)
{
    <table class="table">
        <tr>
            <th></th>
            <th>Tên mặt hàng</th>
            <th>Hãng</th>
            <th>Số lượng</th>
            <th>Giá tiền(đơn)</th>
            <th></th>
        </tr>
        @foreach (var item in Model.Items)
        {
            decimal total = item._quantity * (decimal)item._product.Price;
            <tr>
                <td class="">
                    <img class="preview-img" src="@Url.Content(item._product.ImagePro)" />
                </td>
                <td>
                    <a href="@Url.Action("Details", "Products", new { id = item._product.ProductID })">@item._product.NamePro</a>
                </td>
                <td>
                    <a href="@Url.Action("Details", "Categories", new { id = item._product.Category.Id })">
                        @item._product.Category.NameCate
                    </a>
                </td>
                <td>
                    @using (Html.BeginForm("UpdateCartQuantity", "ShoppingCart"))
                    {
                        <input type="hidden" value="@item._product.ProductID" name="idPro" />
                        <input class="quantity-input" type="number" min="0" value="@item._quantity" name="cartQuantity" />
                        <input type="submit" value="Update" />
                    }
                </td>
                <td>
                    @(String.Format("{0:#,#.##}", item._product.Price))đ
                </td>
                <td class="position-relative">
                    <a href="/ShoppingCart/RemoveCart/@item._product.ProductID" class="no-select close">+</a>
                </td>
            </tr>
        }
        <tr>
            <td colspan="3"></td>
            <td>Thành tiền:</td>
            <td style="font-weight: 700">@(String.Format("{0:#,#.##}", Model.TotalMoney()))đ</td>
            <td></td>
        </tr>
    </table>
    <div class="d-flex flex-column mt-5 align-items-center">
        @if (Session["UserId"] != null)
        {
            using (Html.BeginForm("Checkout", "ShoppingCart", FormMethod.Post, new { style = "display: flex; gap: 10px;" }))
            {
                <input type="hidden" value="@Session["UserId"]" name="CodeCustomer" />
                <input style="text-indent: 5px; border-radius: 6px; border: black 1px solid" type="text" name="AddressDelivery" placeholder="@placeholder_addr" title="@placeholder_addr" />
                <input class="btn btn-success" type="submit" value="Đi đến thanh toán" />
            }
        }
        else
        {
            <div>Bạn cần phải đăng nhập hoặc đăng ký trước khi thanh toán</div>
            <div>
                <a href="@Url.Action("Index","Login")" class="btn btn-success">Đăng nhập</a>
                <a href="@Url.Action("RegisterUser","Login")" class="btn btn-success">Đăng ký</a>
            </div>
        }
    </div>
}
else
{
    <div class="empty-cart">
        Chưa có sản phầm nào trong giỏ hàng...
    </div>
}