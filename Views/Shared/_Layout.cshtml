<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Styles", false)
</head>
<body class="m-0">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-header">
        <div class="container">
            <a href="@Url.Action("Index", "Home")">
                <div class="logo">
                    <img src="~/Image/logo.jpg" class="logo" />
                </div>
            </a>
            <form class="searchBox" method="get" action="@Url.Action("Search", "Home")">
                <input type="text" class="searchBar" placeholder="Search..." name="query" />
                <button type="submit" class="searchBtn">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <g clip-path="url(#clip0_1_2737)">
                            <path d="M15.5 14H14.71L14.43 13.73C15.41 12.59 16 11.11 16 9.5C16 5.91 13.09 3 9.5 3C5.91 3 3 5.91 3 9.5C3 13.09 5.91 16 9.5 16C11.11 16 12.59 15.41 13.73 14.43L14 14.71V15.5L19 20.49L20.49 19L15.5 14ZM9.5 14C7.01 14 5 11.99 5 9.5C5 7.01 7.01 5 9.5 5C11.99 5 14 7.01 14 9.5C14 11.99 11.99 14 9.5 14Z" fill="white" />
                        </g>
                        <defs>
                            <clipPath id="clip0_1_2737">
                                <rect width="24" height="24" fill="white" />
                            </clipPath>
                        </defs>
                    </svg>
                </button>
            </form>
            <div class="d-flex flex-row gap-4">
                <a href="@Url.Action("Index", "Home")">
                    <div class="box-link">
                        <img src="~/Image/svg/heart.svg" alt="favorite list" />
                    </div>
                </a>
                <a href="@Url.Action("Index", "Home")">
                    <div class="box-link">
                        <img src="~/Image/svg/cart.svg" alt="cart list" />
                    </div>
                </a>
                <div class="position-relative">
                    <a class="profile-link" href="@Url.Action("Index", "Login")">
                        <img src="@Url.Content("/Image/profile.png")" alt="profile image" class="profile-img" />
                    </a>
                    <div class="d-flex flex-column gap-2 p-2 profile-popup">
                        @if (Session["UserID"] != null)
                        {
                            <div>Hello, <b>@Session["NameCus"]</b>!</div>
                            <hr style="margin: 0.3em 0;" />
                            <a href="@Url.Action("UserProfile", "Login")">Profile</a>
                            <a href="@Url.Action("LogoutUser", "Login")">Logout</a>
                        }
                        else
                        {
                            <div>Hello, Anonymous user</div>
                            <hr style="margin: 0.3em 0;" />
                            <a href="@Url.Action("Index", "Login")">Login</a>
                            <a href="@Url.Action("RegisterUser", "Login")">Register</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <div class="container mt-4" style="min-height: calc(100vh - 450px);">
        @RenderBody()
    </div>

    <footer>
        <div class="container">
            <div style="display: flex; flex-direction: row; justify-content: space-between; padding-bottom: 34px; padding-top: 60px">
                <div class="frame-wrap">
                    <div class="footer-docs">
                        <div class="title">More info</div>
                        <div class="item">item</div>
                        <div class="item">item</div>
                        <div class="item">item</div>
                    </div>
                    <div class="footer-docs">
                        <div class="title">Service</div>
                        <div class="item">item</div>
                        <div class="item">item</div>
                        <div class="item">item</div>
                    </div>
                    <div class="footer-docs">
                        <div class="title">What?</div>
                        <div class="item">item</div>
                        <div class="item">item</div>
                        <div class="item">item</div>
                        <div class="item">item</div>
                    </div>
                </div>
                <div class="frame-wrap about-us">
                    <div class="title">About us</div>
                    <div class="item">item</div>
                    <div class="item">item</div>
                    <div class="item">item</div>
                </div>
            </div>
            <hr />
            <h2>example.com</h2>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("JavaScript", false)

</body>
</html>
