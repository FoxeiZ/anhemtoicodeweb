@model anhemtoicodeweb.Models.Cart

@{
    ViewBag.Title = "ShowCart";
}

@section Styles {
    <style>
        .item-container {
            display: flex;
            height: 100%;
            max-height: 320px;
            overflow: hidden;
            background: white;
            padding: 12px;
            margin: 10px 0px 20px 0px;
            border-radius: 10px;
            flex-direction: column;
        }

        .flex-container {
            display: flex;
            align-items: center;
        }

        .image-wrapper {
            height: 100%;
            width: 15%;
        }

        .quantity-input {
            width: 64px;
            border-radius: 6px;
            border: #5b5b5b solid 1px;
        }

        .text h3 {
            font-size: 12px;
        }

        .empty-cart {
            border-radius: 10px;
            margin: 20px 0px;
            width: 100%;
            background-color: white;
            height: 10vh;
            line-height: 10vh;
            text-align: center;
            font-size: x-large;
        }

        .preview-img {
            aspect-ratio: 1;
            width: 30px;
            position: relative;
            transform: translateX(30%);
        }
    </style>
}

<h2>Giỏ hàng của bạn</h2>
<a href="@Url.Action("Index", "Products")">&#8592 Tiếp tục mua hàng</a>
@if (Model != null && Model.Items.Count() > 0)
{
    <table class="table">
        <tr>
            <th></th>
            <th>Tên mặt hàng</th>
            <th>Hãng</th>
            <th>Số lượng</th>
            <th>Giá tiền(đơn)</th>
            <th></th>
        </tr>
        @foreach (var item in Model.Items)
        {
            decimal total = item._quantity * (decimal)item._product.Price;
            <tr>
                <td class="">
                    <img class="preview-img" src="@Url.Content(item._product.ImagePro)" />
                </td>
                <td>
                    <a href="@Url.Action("Details", "Products", new { id = item._product.ProductID })">@item._product.NamePro</a>
                </td>
                <td>
                    <a href="@Url.Action("Details", "Categories", new { id = item._product.Category.Id })">
                        @item._product.Category.NameCate
                    </a>
                </td>
                <td>
                    @using (Html.BeginForm("UpdateCartQuantity", "ShoppingCart"))
                    {
                        <input type="hidden" value="@item._product.ProductID" name="idPro" />
                        <input class="quantity-input" type="number" min="0" value="@item._quantity" name="cartQuantity" />
                        <input type="submit" value="Update" />
                    }
                </td>
                <td>
                    @item._product.Price
                </td>
                <td></td>
            </tr>
        }
    </table>
        <h2>Thành tiền: @Model.TotalMoney()</h2>
    <div class="d-flex flex-column mt-5 align-items-center">
        @if (Session["UserId"] != null)
        {
            using (Html.BeginForm("Checkout", "ShoppingCart"))
            {
                <input type="hidden" value="@Session["UserId"]" name="CodeCustomer" />
                <label>Địa chỉ giao hàng</label>
                <input style="border-radius: 6px; border: black 1px solid" type="text" name="AddressDelivery" required />
                <input class="btn btn-success" type="submit" value="Đi đến thanh toán" />
            }
        }
        else
        {
            <div>Bạn cần phải đăng nhập hoặc đăng ký trước khi thanh toán</div>
            <div>
                <a href="@Url.Action("Index","Login")" class="btn btn-success">Đăng nhập</a>
                <a href="@Url.Action("RegisterUser","Login")" class="btn btn-success">Đăng ký</a>
            </div>
        }
    </div>
}
else
{
    <div class="empty-cart">
        Chưa có sản phầm nào trong giỏ hàng...
    </div>
}