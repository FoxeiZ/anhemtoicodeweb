@model IEnumerable<anhemtoicodeweb.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = ViewBag.Layout;
}

@*<h2>Danh sách các hãng</h2>*@
<h4>Sửa bảng <b>hãng sản phẩm</b></h4>

<p>
    @Html.ActionLink("Tạo mới", "Create", "", new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.CategoryId.Trim() }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.CategoryId.Trim() }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.CategoryId.Trim() })
            </td>
        </tr>
    }

</table>
